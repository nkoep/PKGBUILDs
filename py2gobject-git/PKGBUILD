# Maintainer: Niklas Koep <niklas dot koep at gmail dot com>
pkgname=py2gobject-git
pkgver=20130206
pkgrel=1
pkgdesc="Python 2 bindings for GObject and development files"
arch=("i686" "x86_64")
url="https://live.gnome.org/PyGObject"
license=("LGPL")
makedepends=("git" "python2" "python2-cairo" "gobject-introspection")
provides=("python2-gobject" "pygobject2-devel")
conflicts=("python2-gobject" "pygobject2-devel")
options=("!libtool")
url="https://live.gnome.org/PyGObject"
md5sums=("SKIP")
_gitroot="git://git.gnome.org/pygobject"

build() {
    cd "$srcdir"
    msg "Connecting to GIT server...."

    if [ ! -d "${pkgname}" ]; then
        git clone $_gitroot $pkgname --depth=1
    fi

    cd "${pkgname}" && git pull origin
    msg "The local files are updated."

    msg "GIT checkout done or server timeout"
    msg "Starting make..."

    ./autogen.sh --prefix=/usr --with-python=python2
    make
}

package() {
    pkgdesc="Python 2 bindings for GObject"
    depends=("python2" "gobject-introspection" "python2-cairo")

    cd "${srcdir}/${pkgbase}"
    make DESTDIR="${pkgdir}" install
}


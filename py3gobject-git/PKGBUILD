# Maintainer: Niklas Koep <niklas dot koep at gmail dot com>
# Contributor: Atterratio <atterratio at gmail dot com>
pkgname=py3gobject-git
pkgver=20111201
pkgrel=4
pkgdesc="Python 3 bindings for GObject and development files"
arch=("i686" "x86_64")
url="https://live.gnome.org/PyGObject"
license=("LGPL")
makedepends=("git" "python" "python-cairo" "gobject-introspection")
provides=("python-gobject" "pygobject-devel")
conflicts=("python-gobject" "pygobject-devel")
options=("!libtool")
url="https://live.gnome.org/PyGObject"
md5sums=("SKIP")
_gitroot="git://git.gnome.org/pygobject"

build() {
    cd "$srcdir"
    msg "Connecting to GIT server...."

    if [ ! -d "${pkgname}" ]; then
        git clone $_gitroot $pkgname --depth=1
    fi

    cd "${pkgname}" && git pull origin
    msg "The local files are updated."

    msg "GIT checkout done or server timeout"
    msg "Starting make..."

    ./autogen.sh --prefix=/usr
    make
}

package() {
    pkgdesc="Python 3 bindings for GObject"
    depends=("python" "gobject-introspection" "python-cairo")

    cd "${srcdir}/${pkgbase}"
    make DESTDIR="${pkgdir}" install
}

